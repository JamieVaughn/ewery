---
import { Icon } from 'astro-icon/components';
import Container  from '../core/Container.astro';
import LittleSticksPlug from './LittleSticksPlug.astro';

const { hide, footerSocials, footerLists, copyrightName, background, color } =
  Astro.props;
---

<footer
  style={background && `--footer-bg:${background}; --footer-color:${color}`}
>
  <Container>
    <div class="footer-grid__container">
      <div class="footer-brand__container">
        <ul class="footer-socials__list">
            <li class="footer-socials__item">
                <a
                  href='https://bsky.app/profile/jovaughn.bsky.social'
                  target="_blank"
                  rel="noopener noreferrer"
                  class="footer-socials__link"
                  title={`Open Bluesky profile`}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="#000000"><path fill="#000000" d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565C.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479c.815 2.736 3.713 3.66 6.383 3.364c.136-.02.275-.039.415-.056c-.138.022-.276.04-.415.056c-3.912.58-7.387 2.005-2.83 7.078c5.013 5.19 6.87-1.113 7.823-4.308c.953 3.195 2.05 9.271 7.733 4.308c4.267-4.308 1.172-6.498-2.74-7.078a8.741 8.741 0 0 1-.415-.056c.14.017.279.036.415.056c2.67.297 5.568-.628 6.383-3.364c.246-.828.624-5.79.624-6.478c0-.69-.139-1.861-.902-2.206c-.659-.298-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8"/></svg>
                </a>
              </li>
          {
            footerSocials.map((social) => (
              <li class="footer-socials__item">
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="footer-socials__link"
                  title={`Open ${social.name} profile`}
                >
                  <Icon name={social.icon} width={24} height={24} />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      {
        !hide && footerLists.map((list) => (
          <div>
            <p><strong>{list.title}</strong></p>
            <ul class="footer-link__list">
              {list.items.map((item) => (
                <li>
                  <a href={item.slug}>{item.title}</a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    <div class="footer-copyright__container">
      <p>Copyright &copy; {new Date().getFullYear()}</p>
    </div>
    </div>
  </Container>
</footer>

<style>
  footer {
    --footer-bg: var(--theme-primary);
    --footer-color: var(--theme-on-primary);
    min-height: 5vh;
    background-color: var(--footer-bg);
    color: var(--footer-color);
    border-top-left-radius: var(--theme-shape-radius);
    border-top-right-radius: var(--theme-shape-radius);
  }
  .footer-grid__container {
    padding: 5vh 0 1rem 0;
    display: grid;
    align-items: center;
    grid-template-columns: 2fr 1fr 1fr 1fr;
  }
  .footer-socials__list {
    margin: 1rem 0;
    padding: 0;
    display: flex;
    list-style: none;
  }
  .footer-socials__item {
    margin-right: 0.5rem;
  }
  .footer-link__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .footer-link__list li {
    margin-bottom: 0.5rem;
  }
  .footer-link__list li a {
    text-decoration: none;
  }
  .footer-link__list li a:hover {
    opacity: 0.84;
  }
  .footer-copyright__container {
    display: flex;
    flex-direction: column;
    /* justify-content: space-between; */
    grid-column-start: -1;
    place-items: center;
  }
  .footer-copyright__container p {
    font-size: var(--font-size-sm);
  }
  @media (max-width: 768px) {
    .footer-grid__container :first-child {
      grid-column: 1/-1;
    }
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
  @media (max-width: 600px) {
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    .footer-copyright__container {
      flex-direction: column;
    }
  }
</style>